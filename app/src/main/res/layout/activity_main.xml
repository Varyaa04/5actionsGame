<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gameImg"
        android:layout_width="159dp"
        android:layout_height="136dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/start" />


    <ImageView
        android:id="@+id/pcImg"
        android:layout_width="151dp"
        android:layout_height="134dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameImg"
        app:srcCompat="@drawable/none" />


    <ImageView
        android:id="@+id/userImg"
        android:layout_width="151dp"
        android:layout_height="134dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="59dp"
        app:layout_constraintEnd_toStartOf="@+id/pcImg"
        app:layout_constraintTop_toBottomOf="@+id/gameImg"
        app:srcCompat="@drawable/none" />

    <Button
        android:id="@+id/BTNspoke"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="145dp"
        android:text="@string/spokestring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNpaper" />

    <Button
        android:id="@+id/BTNscissors"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/scissorsstring"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNspoke" />

    <Button
        android:id="@+id/BTNpaper"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        android:text="@string/paperstring"
        app:layout_constraintStart_toEndOf="@+id/BTNstone"
        app:layout_constraintTop_toBottomOf="@+id/pcImg" />

    <Button
        android:id="@+id/BTNstone"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="48dp"
        android:text="@string/stonesting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userImg" />

    <Button
        android:id="@+id/BTNlizard"
        android:layout_width="143dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/lizardstring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNspoke" />

    <Button
        android:id="@+id/BTNstrt"
        android:layout_width="242dp"
        android:layout_height="54dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="100dp"
        android:text="@string/startstring"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNscissors" />

</androidx.constraintlayout.widget.ConstraintLayout>